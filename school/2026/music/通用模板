        <!-- ######################################################################## -->
        <!-- ########################## VIDEO SOURCE TEMPLATE ########################## -->
        <!-- #                                                                        # -->
        <!-- #  你不需要改下面这一坨 HTML！                                             # -->
        <!-- #  真正要改的链接在页面最底部的 <script> 里的 VIDEO_SRC 变量！               # -->
        <!-- #                                                                        # -->
        <!-- ######################################################################## -->
        <video id="videoPlayer" controls autoplay muted playsinline>
            <source id="videoSource" src="" type="video/mp4">
            您的浏览器不支持HTML5视频播放
        </video>
    </div>

    <script>
        // ########################################################################
        // ########################## ✅ 修改这里即可 ✅ ##########################
        // 把下面这一行的字符串替换成你的新视频链接（保持引号）
        const VIDEO_SRC = "https://vodkgeyttp8.vod.126.net/cloudmusic/MTE1MjYxNjQ2/ff2f8cfbc575651a98c359b745df5a02/e08dbae46138f64344bc30c9912e0aea.mp4?wsSecret=3d70a3d75c5bff2675da2668adb3bf90&wsTime=1766770884";
        // ########################################################################

        document.getElementById('videoSource').src = VIDEO_SRC;
        document.getElementById('videoPlayer').load();

        window.onload = function() {
            const video = document.getElementById('videoPlayer');
            setTimeout(() => {
                video.addEventListener('canplay', function() {
                    if (video.requestFullscreen) video.requestFullscreen();
                    else if (video.webkitRequestFullscreen) video.webkitRequestFullscreen();
                    else if (video.msRequestFullscreen) video.msRequestFullscreen();
                });
            }, 3000);
        }
    </script>
