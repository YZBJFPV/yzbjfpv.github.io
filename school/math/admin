    <!-- 核心演示脚本 -->
    <script>
        // 演示画布初始化
        const demoCanvas = document.getElementById('demoCanvas');
        const ctx = demoCanvas.getContext('2d');
        let centerX, centerY;
        let angle = 0;
        const radius = 150;
        const circleRadius = 20;

        // 适配画布尺寸
        function resizeDemoCanvas() {
            const { offsetWidth, offsetHeight } = demoCanvas;
            demoCanvas.width = offsetWidth;
            demoCanvas.height = offsetHeight;
            centerX = offsetWidth / 2;
            centerY = offsetHeight / 2;
        }
        window.addEventListener('resize', resizeDemoCanvas);
        resizeDemoCanvas();

        // 绘制演示动画
        function drawDemo() {
            // 清空画布
            ctx.clearRect(0, 0, demoCanvas.width, demoCanvas.height);

            // 绘制中心点
            ctx.beginPath();
            ctx.arc(centerX, centerY, 6, 0, Math.PI * 2);
            ctx.fillStyle = '#165DFF';
            ctx.fill();

            // 计算旋转点坐标
            const x = centerX + radius * Math.cos(angle);
            const y = centerY + radius * Math.sin(angle);

            // 绘制旋转半径线
            ctx.beginPath();
            ctx.moveTo(centerX, centerY);
            ctx.lineTo(x, y);
            ctx.strokeStyle = '#36CFC9';
            ctx.lineWidth = 2;
            ctx.stroke();

            // 绘制旋转圆
            ctx.beginPath();
            ctx.arc(x, y, circleRadius, 0, Math.PI * 2);
            ctx.fillStyle = '#FF7D00';
            ctx.fill();
            ctx.shadowColor = '#FF7D00';
            ctx.shadowBlur = 15;
            ctx.fill();
            ctx.shadowBlur = 0;

            // 绘制角度标注
            ctx.save();
            ctx.translate(centerX, centerY);
            ctx.rotate(angle);
            ctx.fillStyle = '#0F172A';
            ctx.font = '14px Inter';
            ctx.fillText('θ', radius/2 - 10, 10);
            ctx.restore();

            // 更新角度
            angle += 0.01;
            requestAnimationFrame(drawDemo);
        }
        drawDemo();

        // 暗黑模式切换
        const themeSwitch = document.getElementById('themeSwitch');
        themeSwitch.addEventListener('click', () => {
            document.body.classList.toggle('dark-mode');
        });

        // 导航栏滚动效果
        window.addEventListener('scroll', () => {
            const navbar = document.getElementById('flyz-nav');
            navbar.classList.toggle('py-2', window.scrollY > 30);
            navbar.classList.toggle('py-3', window.scrollY <= 30);
        });

        // 粒子背景初始化
        particlesJS('particles-js', {
            number: { value: 60, density: { enable: true, value_area: 800 } },
            color: { value: ["#165DFF", "#FF7D00", "#36CFC9"] },
            shape: { type: "circle" },
            opacity: { value: 0.5, random: true },
            size: { value: 3, random: true },
            line_linked: {
                enable: true,
                distance: 150,
                color: "#165DFF",
                opacity: 0.2,
                width: 1
            },
            move: { enable: true, speed: 1, direction: "none", random: true }
        });
    </script>
